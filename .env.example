# App
APP_NAME=Tripy
APP_DESCRIPTION=Enterprise-grade travel assistant API powered by FastAPI and LangGraph.
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=false
RELOAD=false
HOST=0.0.0.0
PORT=8000
API_V1_PREFIX=/api/v1

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_JSON=false

# Database
DATABASE_URL=sqlite:///./data/app.db
AUTO_CREATE_TABLES=true

# Auth
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Graph
GRAPH_ENABLED=true
DEFAULT_PASSENGER_ID=3442 587242
DEFAULT_USER_ROLE=traveler

# OpenTelemetry
OTEL_ENABLED=false
OTEL_SERVICE_NAME=tripy-api
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_EXPORTER_CONSOLE=true
OTEL_LOG_CORRELATION=true

# LLM
OPENAI_API_KEY=EMPTY
OPENAI_API_BASE=http://localhost:6006/v1
LLM_MODEL=Qwen-7B
LLM_TEMPERATURE=0.2

# Search / Retrieval
TAVILY_API_KEY=
TAVILY_MAX_RESULTS=2
EMBEDDINGS_API_KEY=
EMBEDDINGS_API_BASE=

# Bootstrap admin
BOOTSTRAP_ADMIN_USERNAME=admin
BOOTSTRAP_ADMIN_PASSWORD=ChangeMe123!
BOOTSTRAP_ADMIN_PASSENGER_ID=3442 587242
